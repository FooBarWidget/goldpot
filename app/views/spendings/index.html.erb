<h1>Listing spendings</h1>

<table>
  <tr>
    <th>Datum</th>
    <th>Bedrag (inc BTW)</th>
    <th>Bedrag (ex BTW)</th>
    <th>BTW</th>
    <th>Geldbron</th>
    <th>Commentaar</th>
    <th></th>
  </tr>

<% @spendings.each do |spending| %>
  <tr>
    <td><%= spending.date %></td>
    <td><%= spending.amount_inc_vat %></td>
    <td><%= spending.amount_ex_vat %></td>
    <td>
      <%= link_to 'Edit', edit_spending_path(spending) %>
      <%= link_to 'Destroy', spending, confirm: 'Are you sure?', method: :delete %>
    </td>
  </tr>
<% end %>
</table>

